{
  "name": "redis-man-pc",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "build:mac": "electron-builder --mac",
    "build": "electron-builder -mwl",
    "build:script": "node build.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "A cross-platform Redis desktop management tool built with Electron.",
  "build": {
    "appId": "com.example.redismanpc",
    "productName": "Redis Man PC",
    "icon": "icon.png",
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer/**",
      "package.json"
    ],
    "asar": true,
    "mac": {
      "target": ["dmg"],
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ]
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": false
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Development"
    }
  },
  "dependencies": {
    "redis": "^5.8.0"
  },
  "devDependencies": {
    "electron": "^37.2.6",
    "electron-builder": "^24.13.3"
  }
}
